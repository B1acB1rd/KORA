# Solana RPC Configuration
RPC_URL=https://api.devnet.solana.com
# For mainnet: https://api.mainnet-beta.solana.com

# Network (devnet | mainnet-beta)
NETWORK=devnet

# Operator Wallet - Path to keypair JSON file
WALLET_PATH=./wallet/operator.json

# Treasury Address - Where reclaimed SOL goes
TREASURY_ADDRESS=

# Safety Thresholds
MIN_IDLE_DAYS=7
MAX_RECLAIM_SOL_PER_RUN=10

# Rate Limiting
RPC_DELAY_MS=100
MAX_CONCURRENT_REQUESTS=10
BATCH_SIZE=100

# Telegram Alerts (Optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
ALERT_THRESHOLD_SOL=1.0

# Database
DATABASE_PATH=./database/accounts.db
